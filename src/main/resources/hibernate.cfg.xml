<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
		<property name="connection.url">jdbc:mariadb://localhost:3306/bd_hibernate</property>
		<property name="connection.username"><!-- USUARIO --></property>
		<property name="connection.password"><!-- CONTRASEÃ‘A --></property>
		<!-- Crea y modifica las tablas si es necesario -->
		<property name="hibernate.hbm2ddl.auto">update</property>
		<!-- Mostrar por consola y para depurar -->
		<property name="hibernate.show_sql">true</property>
		<property name="format_sql">true</property>
	</session-factory>
</hibernate-configuration>
